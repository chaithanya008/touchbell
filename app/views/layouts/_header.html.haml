-if notice
  %br
  .alert.alert-info= notice
-if alert  
  %br
  .alert.alert-danger= alert  

.d-flex.flex-column.flex-md-row.align-items-center.p-3.px-md-4.mb-3.bg-white.border-bottom.box-shadow
  %h5.my-0.mr-md-auto.font-weight-normal TouchBell
  %nav.my-2.my-md-0.mr-md-3
    -if user_signed_in?
      %a.p-2.text-dark{:href => "/bells"} Bells
      %a.p-2.text-dark{:href => "/bells/new"} Add new bell
    -if current_user.try(:admin?)
      %a.p-2.text-dark{:href => "/admin"} Admin
  -if user_signed_in?
    = link_to('Logout', destroy_user_session_path, method: :delete, class: 'btn btn-outline-primary')
